  <div class="rr-sidebar bands-border">
    <ul class="rr-list">
      {{#each model as |band|}}
      <li class="rr-list-item" data-test-rr="band-list-item">
        {{#link-to "bands.band" band.id class="rr-band-link" data-test-rr="band-link"}}
        {{band.name}}
        <span class="rr-pointer">
          {{fa-icon "angle-right"}}
        </span>
        {{/link-to}}
      </li>
      {{/each}}
    </ul>
    <div class="rr-new-label">
      {{#if isAddingBand}}
      <form class="rr-inline-form" onsubmit={{action "saveBand"}}>
        {{ input
          type="text"
          class="rr-input"
          value=newBandName
          placeholder="New band"
          data-test-rr="new-band-input"
      }}
        <button type="submit"
          class="rr-action-button"
          disabled={{isAddButtonDisabled}}
          data-test-rr="new-band-button">Add</button>
        <button
          class="rr-cancel-icon"
          onclick={{action "cancelAddBand"}}>{{fa-icon "times"}}
        </button>
      </form>
      {{else}}
      <label onclick={{action "addBand"}} data-test-rr="new-band-label">
        {{fa-icon "plus"}}
        <span class="ml1">Add new band</span>
      </label>
      {{/if}}
    </div>
  </div>

  {{!-- Nested route --}}
  <div class="rr-main-panel nested-songs-border">
    {{outlet}}
  </div>